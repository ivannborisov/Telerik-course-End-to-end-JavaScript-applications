extends ../shared/layout
block main-content
   .container
      .row
         .col-md-6.col-md-offset-3
            h1.text-center My playlists
            br
            table.table-bordered.table
               tr
                  th Title
                  th Description
                  th Category
                  th Private
                  th
               each playlist in playlists
                  tr
                     td #{playlist.title}
                     td #{playlist.description}
                     td #{playlist.category}
                     td
                        #{playlist.private}
                        if playlist.private
                           input(type='checkbox' disabled checked="checked")
                        else
                           input(type='checkbox' disabled)
                     td
                        a.btn.btn-lg.btn-primary(href="/playlist/details/#{playlist._id}") View